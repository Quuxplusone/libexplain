{
    char message[3000];
    explain_message_fchdir(message, sizeof(message), fildes);
    fprintf(stderr, '%s\n', message);
    exit(EXIT_FAILURE);
}
.fi
.ft R
.RE
.TP 8n
\f[I]message\fP
The location in which to store the returned message.  Because a message
