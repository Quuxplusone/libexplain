develop_end_policy_command = "aede-policy -p $project -c $change";

project_specific =
[
    {
        name = "aede-policy";
        value =
            "comments "
            "copyright "
            "crlf "
            "description "
            "escape-hyphen "
            "fsf-address "
            "gpl-version=3 "
            "line-length "
            "man-pages "
            "merge-fhist "
            "merge-rcs "
            "no-tabs "
            "printable "
            "text "
            "version-info " /* see also aegis.conf.d/aemakegen */
            "vim-mode "
            "white-space"
            ;
    },
];

unchanged_file_develop_end_policy = error;
unchanged_file_integrate_pass_policy = warning;

